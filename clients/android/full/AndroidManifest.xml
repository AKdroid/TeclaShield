<?xml version="1.0" encoding="utf-8"?>
<manifest
	xmlns:android="http://schemas.android.com/apk/res/android"
	package="ca.idi.tekla"
	android:versionCode="1"
	android:versionName="1.0">
	<application
		android:label="@string/app_name">
		<service
			android:name=".ime.TeklaInputMethod"
			android:label="@string/kbd_name"
			android:permission="android.permission.BIND_INPUT_METHOD">
			<intent-filter>
				<action android:name="android.view.InputMethod" />
			</intent-filter>
			<meta-data
				android:name="android.view.im"
				android:resource="@xml/input_method"/>
		</service>
		<activity android:name=".TeklaIMESettings"
			android:label="@string/kbd_settings">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
		</activity>
		<service
			android:name=".sep.SwitchEventProvider"
			android:enabled="true">
			<intent-filter>
				<action android:name="ca.idi.tekla.sep.SEPService" />
			</intent-filter>
		</service>
	</application>
	<uses-permission android:name="android.permission.BLUETOOTH"/>
	<uses-permission android:name="android.permission.BLUETOOTH_ADMIN"/>
</manifest> 